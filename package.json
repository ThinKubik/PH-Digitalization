{
  "name": "steer-by-wire",
  "private": true,
  "version": "0.0.3",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "npm run build && electron .",
    "electron:build": "npm run build && electron-packager . \"Steer By Wire\" --platform=win32 --arch=x64 --out=dist_electron --overwrite --ignore=src --ignore=node_modules --ignore=.git && powershell -Command \"Compress-Archive -Path 'dist_electron/Steer By Wire-win32-x64' -DestinationPath 'dist_electron/Steer-By-Wire-0.0.3.zip' -Force\""
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.13.0"
  },
  "devDependencies": {
    "@electron/packager": "^19.0.5",
    "@eslint/js": "^9.39.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.24",
    "cross-env": "^10.1.0",
    "electron": "^36.0.0",
    "electron-builder": "^26.0.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1"
  },
  "build": {
    "appId": "com.parkerhannifin.steer-by-wire",
    "productName": "Steer By Wire",
    "asar": false,
    "directories": {
      "buildResources": "public"
    },
    "files": [
      "dist/**",
      "electron/main.cjs"
    ],
    "win": {
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
